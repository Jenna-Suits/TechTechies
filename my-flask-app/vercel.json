{
    "version": 2,
    "builds": [
      { "src": "index.py", "use": "@vercel/python" }
    ],
    "routes": [
      { "src": "/api/(.*)",        "dest": "/index.py" },
      { "src": "/(.*\\.(js|css|html|png|jpg))", "dest": "/public/$1" },
      { "src": "/(.*)",            "dest": "/index.py" }
    ]
  }